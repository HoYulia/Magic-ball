from random import choice
answ = ['Бесспорно', 'Предрешено', 'Никаких сомнений', 'Определённо да', 'Можешь быть уверен в этом', 'Мне кажется - да', 'Вероятнее всего', '	Хорошие перспективы', 'Знаки говорят - да', 'Да', 'Пока неясно, попробуй снова', '	Спроси позже', 'Лучше не рассказывать', 'Сейчас нельзя предсказать', 'Сконцентрируйся и спроси опять', 'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет', 'Перспективы не очень хорошие', 'Весьма сомнительно']
# Приветствие пользователя
print('Привет Мир, я магический шар, и я знаю ответ на любой твой вопрос\N{slightly smiling face}')
print('Назови своё имя?')
name = input().capitalize()
print(f'{name}, добро пожаловать в мир ответов!')
print('Что ты хочешь узнать?')
again = True
# Основной цикл ('Задай вопрос?')
while again:
    print('Задай свой вопрос:')
    def get_ans():
        q = input().capitalize()
        if q == '': 
            return 'Шар не умеет читать мысли!'
        else:
            return choice(answ)
    print(get_ans())
    print(f'{name} у тебя еще остались вопросы ко мне ? (Да, Нет)')
    contin = input()
    if contin.lower() == 'да':
        again = True
    else:
        print('Возвращайся если возникнут вопросы!\N{slightly smiling face}')
        again = False